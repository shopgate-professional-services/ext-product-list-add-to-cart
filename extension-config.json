{
  "version": "1.1.0",
  "id": "@shopgate-project/product-list-add-to-cart",
  "components": [
    {
      "id": "ProductItemFavoritesButton",
      "path": "frontend/portals/ProductItemFavoritesButton/index.jsx",
      "target": "product-item.favorites-button",
      "type": "portals"
    },
    {
      "id": "ProductItemImageAfterGap",
      "path": "frontend/portals/ProductItemImageAfterGap.jsx",
      "target": "product-item.image.after",
      "type": "portals"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    }
  ],
  "configuration": {
    "maxEntries": {
      "type": "admin",
      "destination": "frontend",
      "default": 30,
      "params": {
        "label": "Quantity selection picker max value",
        "type": "number"
      }
    },
    "modalMapping": {
      "type": "admin",
      "default": [],
      "destination": "frontend",
      "params": {
        "label": "Mapping for tag/property and message",
        "description": "The various tags/properties and src associations for extension. The modal hierarchy for items with multiple trigger tags is determined by array.",
        "type": "json"
      }
    }
  }
}
